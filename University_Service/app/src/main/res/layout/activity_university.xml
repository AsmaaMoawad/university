<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        tools:context=".UniversityActivity"
        android:layout_height="match_parent"
        android:id="@+id/UniversityActivity">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="50dp"
                >
                <TextView
                    android:id="@+id/title_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/pb2"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:contentDescription="@string/app_name"
                    />
            </RelativeLayout>

            <TextView
                android:text="@string/accountnumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#5c2e88"
                android:textStyle="bold"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"/>

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:singleLine="true"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:textStyle="bold"
                android:textColor="#5c2e88"
                android:id="@+id/University_ID_EditText"/>


            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="@string/inquiry"
                android:textStyle="bold"
                android:textSize="15sp"
                android:background="@drawable/pb2"
                android:textColor="#ffffff"
                android:id="@+id/btnUniversity"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"

                />
        </LinearLayout>

</android.support.v4.widget.DrawerLayout>